#!/bin/bash

# Check if a port number is provided as an argument
if [ -z "$1" ]; then
  echo "Usage: $0 <PORT_NUMBER>"
  echo "Please provide a port number to terminate a process using it."
  exit 1
fi

PORT_NUMBER=$1

# Find the process ID (PID) using the specified port
PID=$(lsof -t -i:$PORT_NUMBER)

if [ -n "$PID" ]; then
    echo "Process using port $PORT_NUMBER found. Terminating..."
    kill -9 $PID
    echo "Process terminated."
else
    echo "No process found using port $PORT_NUMBER."
fi
